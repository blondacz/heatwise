# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.java text diff=java
*.scala text diff=scala
*.kt text diff=kotlin
*.kts text diff=kotlin
*.scala text diff=java
*.groovy text diff=java
*.gradle text diff=java
*.gradle.kts text diff=kotlin

# Documentation
*.md text diff=markdown
*.txt text
*.adoc text
*.textile text
*.mustache text
*.csv text
*.tab text
*.tsv text
*.coffee text
*.css text
*.htm text diff=html
*.html text diff=html
*.xhtml text diff=html
*.inc text
*.js text
*.jsx text
*.json text
*.less text
*.od text
*.onlydata text
*.php text diff=php
*.pl text
*.properties text
*.py text diff=python
*.rb text diff=ruby
*.sass text
*.scm text
*.scss text
*.sh text eol=lf
*.sql text
*.styl text
*.tag text
*.ts text
*.xml text
*.xhtml text diff=html
*.yaml text
*.yml text

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

# Scripts
*.bash text eol=lf
*.fish text eol=lf
*.sh text eol=lf
# These are explicitly windows files and should use crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Serialisation
*.json text
*.toml text
*.xml text
*.yaml text
*.yml text

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary

# Text files where line endings should be preserved
*.patch -text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore

# Gradle wrapper
gradlew text eol=lf
gradlew.bat text eol=crlf
